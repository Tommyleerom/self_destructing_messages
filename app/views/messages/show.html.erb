<p id="notice"><%= notice %></p>

<strong>Report:</strong>
  <% if params[:password] == @message.password %>
    <div><%= @message.decrypt_message %></div>
    <% @message.update_attribute(:lifetime, @message.lifetime -= 1) %>
  <% else %>
    <div><%= @message.report %></div>
    <strong>To see the massage, please enter the password:</strong>
    <div>
    <%= form_with method: :get do |f| %>
      <%= f.password_field :password %>
      <%= f.submit "Submit" %>
    <% end %>
    </div>
  <% end %>
<div><%= @message.lifetime %></div>
<strong>Save link to this message:</strong>
<%= link_to message_url %>
<%= link_to 'Back', messages_path %>
