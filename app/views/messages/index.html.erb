<p id="notice"><%= notice %></p>

<h1>Messages</h1>
<%= Time.now %>
<table>
  <thead>
    <tr>
      <th>Report</th>
      <th>Password</th>
      <th>Created</th>
      <th>LifeTime</th>
      <th>Decrypt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= link_to "message", controller: 'messages', action: "show", auth_token: message.auth_token %></td>
        <td><%= message.password %></td>
        <td><%= message.created_at %></td>
        <td><%= message.lifetime %></td>
        <td><%= message.decrypt_message %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_message_path %>
